<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Admin Panel - VPN Comparison Site</title>
  <link rel="stylesheet" href="/styles.css">
</head>
<body>
  <header>
    <h1>Admin Panel</h1>
    <p>Edit VPN provider information</p>
  </header>

  <main>
    <% if (typeof updated !== 'undefined' && updated === 'true') { %>
      <div class="alert alert-success">Provider information updated successfully!</div>
    <% } %>

    <div class="admin-container">
      <% vpnProviders.forEach(provider => { %>
        <div class="admin-form">
          <h3>Edit <%= provider.name %></h3>
          <form action="/admin/update" method="POST">
            <input type="hidden" name="id" value="<%= provider.id %>">
            
            <div class="form-group">
              <label for="name_<%= provider.id %>">Name:</label>
              <input type="text" id="name_<%= provider.id %>" name="name" value="<%= provider.name %>" required>
            </div>
            
            <div class="form-group">
              <label for="description_<%= provider.id %>">Description:</label>
              <textarea id="description_<%= provider.id %>" name="description" rows="3" required><%= provider.description %></textarea>
            </div>
            
            <div class="form-group">
              <label for="link_<%= provider.id %>">Link:</label>
              <input type="url" id="link_<%= provider.id %>" name="link" value="<%= provider.link %>" required>
            </div>
            
            <div class="form-group">
              <label for="price_<%= provider.id %>">Price:</label>
              <input type="text" id="price_<%= provider.id %>" name="price" value="<%= provider.price %>" required>
            </div>
            
            <div class="form-group">
              <label for="rating_<%= provider.id %>">Rating (0-5):</label>
              <input type="number" id="rating_<%= provider.id %>" name="rating" value="<%= provider.rating %>" min="0" max="5" step="0.1" required>
            </div>
            
            <button type="submit" class="btn primary-btn">Update Provider</button>
          </form>
        </div>
      <% }); %>
    </div>
  </main>

  <footer>
    <p>&copy; 2026 VPN Comparison Site Admin. All rights reserved.</p>
  </footer>
</body>
</html>